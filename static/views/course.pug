extends layout 

block content 
    h1 #{course.name}
    p #{course.description}
    p #{course.rating}
    each review in course.reviews 
        div
            h2 #{review.userId.username}
            p #{review.rating}
            p #{review.comment}
    div 
        form(action=`api/courses/review`, method='POST')
            input(type='number', name='rating', placeholder='Rating')
            input(type='text', name='comment', placeholder='Comment')
            button(type='submit') Submit Review